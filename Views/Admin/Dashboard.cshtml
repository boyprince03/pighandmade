@{
    ViewData["Title"] = "管理員儀表板";
    var topProducts = ViewBag.TopProducts;
    var popularProducts = ViewBag.PopularProducts;
    var pendingApplications = ViewBag.PendingSellerApplications;
}

<h2 class="mb-4">📊 管理員儀表板</h2>


@* <div class="mb-3"> *@
@*     <a asp-controller="Seller" asp-action="Dashboard" class="btn btn-outline-success"> *@
@*         前往 Seller Dashboard *@
@*     </a> *@
@* </div> *@



<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">總銷售金額</h5>
                <p class="card-text display-6">$@ViewBag.TotalSales</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">訂單總數</h5>
                <p class="card-text display-6">@ViewBag.OrderCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">平均訂單金額</h5>
                <p class="card-text display-6">$@ViewBag.AvgOrder</p>
            </div>
        </div>
    </div>
</div>
<div class="mb-3">
    <a asp-controller="Admin" asp-action="AllProducts" class="btn btn-outline-dark">
        📦 商品總覽
    </a>
</div>

<!-- 賣家申請通知卡片 -->
<div class="card border-warning mb-4">
    <div class="card-body d-flex justify-content-between align-items-center">
        <div>
            <strong>待審核賣家申請：</strong> @pendingApplications 筆
        </div>
        <a asp-controller="Admin" asp-action="SellerApplications" class="btn btn-sm btn-warning">
            前往審核
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5>🔥 熱銷商品 Top 5</h5>
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var item in topProducts)
                {
                        <li class="list-group-item">@item.Product.Name - 售出數量: @item.Quantity</li>
                }
            </ul>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5>👀 最多瀏覽商品 Top 5</h5>
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var p in popularProducts)
                {
                        <li class="list-group-item">@p.Name - 瀏覽次數: @p.ViewCount</li>
                }
            </ul>
        </div>
    </div>
</div>


<div class="card mt-4 border-info">
    <div class="card-body">
        <strong>👥 今日來站人數：</strong> @ViewBag.VisitorCount
    </div>

</div>
<!-- 🏬 店鋪管理區塊 -->
<div class="card mt-4 border-secondary">
    <div class="card-body d-flex justify-content-between align-items-center">
        <div>
            <strong>🏬 店鋪管理：</strong> 瀏覽並管理所有賣家商店
        </div>
        <a asp-controller="Admin" asp-action="StoreManagement" class="btn btn-sm btn-outline-secondary">
            前往店鋪管理
        </a>
    </div>
</div>

<!-- 👤 帳號管理區塊 -->
<div class="card mt-3 border-dark">
    <div class="card-body d-flex justify-content-between align-items-center">
        <div>
            <strong>👤 帳號管理：</strong> 管理黑名單 / VIP 身份（功能待開發 Demo 中）
        </div>
        <a asp-controller="Admin" asp-action="UserManagement" class="btn btn-sm btn-outline-dark disabled">
            敬請期待
        </a>
    </div>
</div>

